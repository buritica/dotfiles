# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.md text
*.txt text
*.yml text
*.yaml text
*.json text
*.toml text
*.tmpl text

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.age binary

# Diff settings for specific files
*.md diff=markdown
*.sh diff=bash

# Export ignore (files excluded from git archive)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.cursorrules export-ignore
test.sh export-ignore
CONTRIBUTING.md export-ignore

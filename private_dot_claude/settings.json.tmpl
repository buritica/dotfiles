{
  "permissions": {
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'input=$(cat); cwd=$(echo \"$input\" | jq -r \".cwd\"); time=$(date \"+%H:%M:%S\"); user=$(whoami); hostname=$(hostname -s); if [ \"$cwd\" = \"$HOME\" ]; then dir=\"~\"; else dir=$(basename \"$cwd\"); fi; git_branch=\"\"; if git -C \"$cwd\" rev-parse --git-dir > /dev/null 2>&1; then branch=$(git -C \"$cwd\" branch --show-current 2>/dev/null); [ -n \"$branch\" ] && git_branch=\" git:($branch)\"; fi; printf \"[%s] \\033[36m%s\\033[0m:\\033[32m%s\\033[0m\\033[33m%s\\033[0m\" \"$time\" \"$user\" \"$dir\" \"$git_branch\"'"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "hookify@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "dev-browser@dev-browser-marketplace": true,
    "browser-automation@browser-tools": true,
    "superpowers@superpowers-marketplace": true
  }
}
